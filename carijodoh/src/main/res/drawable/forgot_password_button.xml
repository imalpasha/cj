<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="#27A9E1" />
            <gradient android:angle="-90" android:endColor="#F4F8FB" android:startColor="#F4F8FB" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="#27A9E1" />
            <gradient android:angle="-90" android:endColor="#70CBD3" android:startColor="#70CBD3" />
        </shape>
    </item>

</selector>

